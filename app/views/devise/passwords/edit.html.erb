<section class="flex flex-col w-full min-h-screen flex justify-center items-center bg-gray-50 dark:bg-gray-900">

  <%= render "devise/shared/errors", resource: resource %>

  <div class="relative w-[460px] h-[380px] dark:bg-gray-800 rounded-lg overflow-hidden">
    <div class="absolute w-[460px] h-[380px] bg-gradient-to-l from-cyan-500 via-cyan-500 to-transparent -top-[50%] -left-[50%] animate-spin-slow origin-bottom-right"></div>
    <div class="absolute w-[460px] h-[380px] bg-gradient-to-l from-rose-500 via-rose-500 to-transparent -top-[50%] -left-[50%] animate-spin-slow-delayed origin-bottom-right"></div>

    <div class="absolute inset-1 bg-gray-800 rounded-lg z-10 p-5">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-4">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Change your password
        </h1>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-4 md:space-y-6'}) do |f| %>
          <div>
            <%= f.label :password, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.password_field :password, required: true, placeholder:'••••••••', class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <div>
            <%= f.label :password_confirmation, class:"block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.password_field :password_confirmation, required: true, placeholder:'••••••••', class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <%= f.hidden_field :reset_password_token %>

          <%= f.submit 'Change my password',
                       class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-4 py-3 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
          %>
        <% end %>
      </div>
    </div>
  </div>
</section>