<section class="flex flex-col w-full min-h-screen flex justify-center items-center bg-gray-50 dark:bg-gray-900">

  <%= render "devise/shared/errors", resource: resource %>

  <div class="relative w-[460px] h-[600px] dark:bg-gray-800 rounded-lg overflow-hidden">
    <div class="absolute w-[460px] h-[600px] bg-gradient-to-l from-cyan-500 via-cyan-500 to-transparent -top-[50%] -left-[50%] animate-spin-slow origin-bottom-right"></div>
    <div class="absolute w-[460px] h-[600px] bg-gradient-to-l from-rose-500 via-rose-500 to-transparent -top-[50%] -left-[50%] animate-spin-slow-delayed origin-bottom-right"></div>

    <div class="absolute inset-1 bg-gray-800 rounded-lg z-10 p-5">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-4">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Sign in to your account
        </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4 md:space-y-6'}) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div>
            <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.email_field :email, required: true, placeholder:'name@domain.com', class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"  %>
          </div>

          <div>
            <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.password_field :password, required: true, placeholder:'••••••••', class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :remember_me, class:"w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :remember_me, class:"text-gray-500 dark:text-gray-300" %>
                </div>
              </div>
            <% end %>

            <a href="<%= new_user_password_path %>" class="text-sm font-medium text-primary-600 hover:underline dark:text-gray-300">Forgot password?</a>
          </div>

          <%= f.submit 'Login', class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg px-4 py-3 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" %>
        <% end %>

        <div
        class="my-4 flex items-center before:mt-0.5 before:flex-1 before:border-t before:border-neutral-300 after:mt-0.5 after:flex-1 after:border-t after:border-neutral-300">
        <p
          class="mx-4 mb-0 text-center font-semibold dark:text-neutral-200">
          OR
        </p>
        </div>

        <%= button_to user_github_omniauth_authorize_path, method: :post, data: {turbo: "false"}, class: 'w-full block bg-white hover:bg-gray-200 focus:bg-gray-100 text-gray-900 font-semibold rounded-lg px-4 py-3 border border-gray-300' do %>
          <div class="flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
            <span class="ml-4">
              Log in with Github
            </span>
          </div>
        <% end %>

        <p class="text-sm font-light text-gray-500 dark:text-gray-400">
          Don’t have an account yet ? <a href="<%= new_user_registration_path %>" class="font-medium text-primary-600 hover:underline dark:text-primary-500">Sign up</a>
        </p>

      </div>
    </div>
  </div>
</section>